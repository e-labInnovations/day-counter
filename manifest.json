{
    "name": "Day Counter",
    "version": "1.0.0",
    "description": "Count number of days from referance date.",
    "permissions": ["storage"],
    "manifest_version": 3,
    "options_page": "options.html",
    
       "background": {
          "page": "background.html"
       },
       "content_scripts": [ {
          "js": [ "script.js" ],
          "matches": [ "http://*/*", "https://*/*" ]
       } ],
       "icons": {
          "128": "icon128.png",
          "16": "icon16.png",
          "48": "icon48.png"
       },
       "browser_action": {
          "default_icon": "icon16.png"
       }
    }
    